generator client {
provider = "prisma-client-js"
}

datasource db {
provider = "postgresql"
url = env("POSTGRES_PRISMA_URL") // uses connection pooling
directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Recipie {
id String @id @default(cuid())
ingredient  String
method  String
steps   String
}

model Method {
id String @id @default(cuid())
}

model Steps{
    id String @id @default(cuid())
}

//these are here so they don't get overwritten
model Video {
  id        Int      @id @default(autoincrement())
  name      String
  url       String
  votes     Int
  length    Int
}

model flashcards {
  id        Int      @id @default(autoincrement())
  prompt      String
  answer      String
  correct     Int
  time    Int
}